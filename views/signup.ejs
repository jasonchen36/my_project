<!doctype html>
<html>
<head>
	<title>Greenlight Essentials</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	<style>
		body 		{ padding-top:80px; 
		background-image: url("/everyone/bg.jpg");
		background-size:cover;
			background-repeat: no-repeat; }


						.green {
  color: black;

  border: 2px white solid;

}

.green:hover {
  color: #fff;
  background-color: grey;
}

.btn {
  cursor: pointer;
  margin: 10px;
  border-radius: 5px;
  text-decoration: none;
  padding: 10px;
  font-size: 22px;
  transition: .3s;
  -webkit-transition: .3s;
  -moz-transition: .3s;
  -o-transition: .3s;
  display: inline-block;
}	
	</style>
</head>
<body style="background-color:#424242;">

<h1 style="z-index:9999;position:fixed;color:#A9F5A9;width:100%;background-color: #1C1C1C;height:70px;top:0px;padding:0px;margin:0px">


<div style='text-align:left;width:100%;position:relative;top:'>
<a href="/" style="color:inherit;
  text-decoration: none;z-index:99999;">
<img src='/everyone/glessentials.png' style="position:relative;left:px" height='70px'></a></div></h1>

<div class="container">

<div class="col-sm-6 col-sm-offset-3">

	<h1 style="color:#A9F5A9"><span class="fa fa-sign-in"></span> Signup</h1>

	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

	<!-- LOGIN FORM -->
	<form action="/signup" method="post">
		<div class="form-group">
			<label style="color:#A9F5A9">Email</label>
			<input type="text" class="form-control" name="email">
		</div>
		<div class="form-group">
			<label style="color:#A9F5A9">Password</label>
			<input type="password" class="form-control" name="password">
		</div>

		<div class="form-group">
			<label style="color:#A9F5A9">Retype in password</label>
			<input type="password" class="form-control" name="repassword">
		</div>


		<div class="form-group">
			<label style="color:#A9F5A9">Your name</label>
			<input type="text" class="form-control" style="width:40%;" name="name">
		</div>

		<div class="form-group">
			<label style="color:#A9F5A9">Company</label>
			<input type="text" class="form-control" style="width:60%;" name="company">
		</div>

		<button type="submit" class="btn green">Signup</button>
	</form>

	<hr>

	<p style="color:#A9F5A9">Already have an account? <a href="/login">Login</a></p>
	<p style="color:#A9F5A9">Or go <a href="/">home</a>.</p>

</div>

</div>
</body>
</html>
