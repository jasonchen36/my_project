<div id="pre-sales-{{id}}-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button id="pre-sales-{{id}}-close" type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
				<h4 class="modal-title">Pre-Sales</h4>
			</div>
			<div class="modal-body">
				<form id="pre-sales-{{id}}-form" class="form-horizontal" role="form">
					<div class="form-group">
						<label for="pre-sales-{{id}}-investor" class="control-label col-xs-2">Investor:</label>
						<div class="col-xs-9">
							<input type="text" class="form-control" id="pre-sales-{{id}}-investor" value="{{investor}}" >
						</div>
					</div>
					<div class="form-group">
						<label for="pre-sales-{{id}}-territory" class="control-label col-xs-2">Territory:</label>
						<div class="col-xs-9">
							<input type="text" class="form-control" id="pre-sales-{{id}}-territory" value="{{territory}}">
						</div>
					</div>
					<div class="form-group">
						<label for="pre-sales-{{id}}-distributor" class="control-label col-xs-2">Distributor:</label>
						<div class="col-xs-9">
							<input type="text" class="form-control" id="pre-sales-{{id}}-distributor" value="{{distributor}}" >
						</div>
					</div>
					<div class="form-group">
						<label for="pre-sales-{{id}}-amount" class="control-label col-xs-2">Amount:</label>
						<div class="col-xs-2">
							<select name="currency_code" id="pre-sales-{{id}}-currency" class="form-control">
								<option value="AUD">AUD</option>
								<option value="BRL">BRL </option>
								<option value="CAD" selected="selected">CAD</option>
								<option value="CZK">CZK</option>
								<option value="DKK">DKK</option>
								<option value="EUR">EUR</option>
								<option value="HKD">HKD</option>
								<option value="HUF">HUF </option>
								<option value="ILS">ILS</option>
								<option value="JPY">JPY</option>
								<option value="MYR">MYR</option>
								<option value="MXN">MXN</option>
								<option value="NOK">NOK</option>
								<option value="NZD">NZD</option>
								<option value="PHP">PHP</option>
								<option value="PLN">PLN</option>
								<option value="GBP">GBP</option>
								<option value="SGD">SGD</option>
								<option value="SEK">SEK</option>
								<option value="CHF">CHF</option>
								<option value="TWD">TWD</option>
								<option value="THB">THB</option>
								<option value="TRY">TRY</option>
								<option value="USD">USD</option>
							</select>
						</div>
						<div class="col-xs-7">
							<input type="number" min="0" class="form-control" id="pre-sales-{{id}}-amount" value="{{amount}}">
						</div>
					</div>
					<div class="form-group">
						<label class="col-xs-2 control-label">Deposit is:</label>
						<div class="col-xs-9">
							<div class="custom-controls-stacked">
								<label class="custom-control custom-radio">
									<input id="pre-sales-{{id}}-advancesProd" name="radio-stacked" type="radio" class="custom-control-input" {{#if advProd}}checked="checked"{{/if}}>
									<span class="custom-control-indicator"></span>
									<span class="custom-control-description">Advanced to Production</span>
								</label>
								<br/>
								<label class="custom-control custom-radio">
									<input id="pre-sales-{{id}}-depositAdvances" name="radio-stacked" type="radio" class="custom-control-input" {{#if depositAdvances}}checked="checked"{{/if}}>
									<span class="custom-control-indicator"></span>
									<span class="custom-control-description">Held in Escrow</span>
								</label>
							</div>
						</div>
					</div>
					<div id="pre-sales-{{id}}-deposit-form" class="form-group {{#if advProd}}hidden{{/if}}">
						<label for="pre-sales-{{id}}-escrow-amount" class="control-label col-xs-2">Escrow Amount:</label>
						<div class="col-xs-9">
							<input type="number" min="0" class="form-control" id="pre-sales-{{id}}-escrow-amount" value="{{escrow-amount}}">
						</div>
					</div>
					<div class="modal-footer">
						<button id="pre-sales-{{id}}-cancel" type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>
						{{#if investor}}
							<button  id="pre-sales-{{id}}-edit" class="btn btn-info" data-dismiss="modal">Edit</button>
						{{/if}}
						{{#unless investor}}
							<button id="pre-sales-{{id}}-save" type="button" class="btn btn-info" data-dismiss="modal">Save</button>
						{{/unless}}
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

