<div id="pre-sales-{{id}}-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
				<h4 class="modal-title">Pre-Sales</h4>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-md-6">
						<div class="form-group">
							<label for="pre-sales-investor" class="control-label">Investor:</label>
							<input type="text" class="form-control" id="pre-sales-investor" value="{{investor}}" >
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label for="pre-sales-territory" class="control-label">Territory:</label>
							<input type="text" class="form-control" id="pre-sales-territory" value="{{territory}}">
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
						<div class="form-group">
							<label for="pre-sales-amount" class="control-label">Amount:</label>
							<input type="number" min="0" class="form-control" id="pre-sales-amount" value="{{amount}}">
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
						<div class="form-group">
							<label class="col-md-3 control-label">Deposit Held in Escrow?</label>
							<div class="col-md-9">
								<div class="custom-controls-stacked">
									<label class="custom-control custom-radio">
										<input id="pre-sales-is-escrow-radio1" name="radio-stacked" type="radio" class="custom-control-input" {{#if inEscrow}} checked {{/if}}>
										<span class="custom-control-indicator"></span>
										<span class="custom-control-description">True</span>
									</label>
									<br/>
									<label class="custom-control custom-radio">
										<input id="pre-sales-is-escrow-radio2" name="radio-stacked" type="radio" class="custom-control-input" {{#unless inEscrow}}checked {{/unless}}>
										<span class="custom-control-indicator"></span>
										<span class="custom-control-description">False</span>
									</label>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="row {{#unless inEscrow}}hidden{{/unless}}">
					<div class="col-md-12">
						<div class="form-group">
							<label for="pre-sales-escrow-amount" class="control-label">Amount:</label>
							<input type="number" min="0" class="form-control" id="pre-sales-escrow-amount" value="{{escrow-amount}}">
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
					<button type="button" class="btn btn-info">Save changes</button>
				</div>
			</div>
		</div>
	</div>
</div>

